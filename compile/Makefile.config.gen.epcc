#==================================================================
#          General definitions 
#-----------------------------------------------------------------
# Compile options and Fortran underscore convention
#-----------------------------------------------------------------
DBG_FLAG         =
OPTS             = -O3 -qstrict -qarch=440 -qtune=440 -qinitauto=FF 
LNK_OPTS         = -memory gnu -lz
F_COMPILER       = xlf $(OPTS) 
F_COMPILER_NOPT  = xlf $(DBG_FLAG)
OPT_FORT         = 
DUAL_FFTW        = -DDUAL_FFTW_OFF
RUNCOMMAND       = ../cpaimd.x	
#-----------------------------------------------------------------
# Directories :  (fftw must be the full path)
#-----------------------------------------------------------------
CPAIMD      = ../
FFT_HOME    = $(HOME)/fftw_dh
MYMATH_HOME = ../src_mathlib
VALID_DIR   = ../binary/water_32M_10Ry
VALID_EXEC  = ../autotest
AUTOTEST    = ../$(VALID_EXEC)
LOCAL_LIB_PATHS = -L$(HOME)/mylibs -L/bgl/local/lib
